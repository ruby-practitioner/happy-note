<% provide(:title, 'Happy Note - Register') %>

<h2>Register New User</h2>

<%= form_for @user do |f| %>
  <%= render 'common/errors', object: @user %>

  <p>
    <%= f.label :username %>
    <%= f.text_field :username %>
  </p>

  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>

  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>

  <p>
    <%= f.submit 'Register' %>
  </p>
<% end %>